<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_cook"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/cookimg_drawable"
            android:scaleType="center"
            fresco:actualImageScaleType="focusCrop"
            fresco:failureImage="@drawable/lodingimgfailed"
            fresco:placeholderImage="@drawable/lodingimg" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/iv_cook"
            android:text="荠菜山药羹"
            android:textColor="@color/primaryText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/iv_cook"
            android:maxLines="1"
            android:text="荠菜 山药 烧开 倒入 高汤"
            android:textColor="@color/secondaryText"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>